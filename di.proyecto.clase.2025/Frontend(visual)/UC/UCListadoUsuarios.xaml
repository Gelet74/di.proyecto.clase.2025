<UserControl x:Class="di.proyecto.clase._2025.Frontend_visual_.UC.UCListadoUsuarios"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:di.proyecto.clase._2025.Frontend_visual_.UC"
             mc:Ignorable="d" 
             x:Name="ucListadoUsuarios"
             Loaded="ucListadoUsuarios_Loaded"
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <Grid DockPanel.Dock="Top">
            <TextBlock
                Text="LISTADO DE USUARIOS"
                FontSize="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Foreground="Black"/>
        </Grid>
        <Grid>
            <DataGrid ItemsSource="{Binding listaUsuarios}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      ColumnWidth="*">
                <!--CanUserAddRows:para evitar que aparezca linea en blanco al final-->
                <DataGrid.Columns>
                    <DataGridTextColumn Header="NOMBRE-APELLIDOS"
                                        Binding="{Binding}"/>
                    <DataGridTextColumn Header="USERNAME"
                                        Binding="{Binding Username}"/>                    
                    <DataGridTextColumn Header="ROL"
                                        Binding="{Binding RolNavigation.Nombre}"/>
                    <DataGridTextColumn Header="DEPARTAMENTO"
                                        Binding="{Binding DepartamentoNavigation.Nombre}"/>
                    <DataGridTextColumn Header="GRUPO"
                                        Binding="{Binding GrupoNavigation.Nombre}"/>

                    <DataGridTextColumn Header="Nº ARTÍCULOS ALTA"
                                        Binding="{Binding NumeroArticulosAlta}"/>




                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </DockPanel>
</UserControl>
